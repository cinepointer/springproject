<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
        
<mapper namespace="com.cinepointer.dao.tmdbDao">

    <!-- 장르 가져오기 -->
    <select id="getAllGenres" resultType="com.cinepointer.dto.tmdbGenreDto">
        SELECT genre_num, genre_name
        FROM genre_table
    </select>

    <!-- 인기 영화 500선 가져오기 -->
    <select id="getPopularMovies" resultType="com.cinepointer.dto.tmdbMovieDto">
        SELECT movie_num, movie_title, movie_release_date, movie_poster_path, movie_overview, movie_reg_date, movie_adult
        FROM movie_table
    </select>

</mapper>

        
